  <!-- Icon -->
  <a href="/" class="flex h-full items-center aspect-square">
    <img
      class="flex h-full aspect-square"
      src="https://cdn.glitch.global/8a69a447-95b2-456d-95af-9d3addfebea8/osint-monkey?v=1720500449880"
    />
  </a>

  <!-- Desktop Links -->
  <div class="hidden md:flex flex-row items-center space-x-6 ml-auto text-lg">
    <a href="/" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Home</a>
    <a href="/learn" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Learn</a>
    <a href="/practice" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Practice</a>
    <!-- <a href="/compete" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Compete</a> -->
    <a href="/about" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">About</a>
  </div>

  <!-- Auth for Desktop -->
  <% if (!loggedIn) { %>
  <div class="hidden md:flex flex-row items-center space-x-6 ml-auto text-lg">
    <a href="/register" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Sign Up</a>
    <a href="/login" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Login</a>
  </div>
  <% } else { %>
    <div class="hidden md:flex flex-row items-center space-x-6 ml-auto text-lg">
    <a href="/profile" class="tracking-wide text-[#00171F] transition duration-300 border-b-2 border-transparent hover:border-[#00171F]">Profile</a>
