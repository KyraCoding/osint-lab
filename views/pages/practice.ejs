  <%- include('../partials/head') %>
  <!-- Note to aryan: switch to font-barlow if you want barlow font-->
  <body class="font-roboto bg-[#E7F7FC]">
    <!-- Navbar -->
    <%- include('../partials/header') %>
    <!-- Main content -->
    <div class="flex flex-col mt-14 p-12 mx-auto gap-8 text-slate-800 grow">
      <% Object.keys(challenges).forEach((key) => { %>
        <div class="mb-12" data-category="<%= key.toUpperCase() %>">
          <h2 class="text-4xl font-bold mb-6"><%= key.toUpperCase() %></h2>
          <div class="grid grid-cols-3 gap-4 justify-between">
            <% challenges[key].forEach((challenge) => { %>
              <div onclick="overlay(this)" data-raw_data ="<%= challenge %>" class="flex flex-col justify-between overflow-auto bg-[#003459] hover:bg-[#007EA7] ease-in duration-150 h-40 cursor-pointer p-4 rounded-lg shadow-md text-[#E7F7FC]">
                <div class="flex justify-between gap-2">
                    <h3 class="flex text-xl font-semibold"><%= challenge.title %></h3>
                    <%
                       var color = "text-[#37E100]"
                       switch (challenge.difficulty) {
                         case "beginner":
                           color = "text-[#00A7E1]"
                           break
                         case "easy":
                           color = "text-[#37E100]"
                           break
                         case "medium":
                           color = "text-[#E13A00]"                          
                           break
                         case "hard":
                           color = "text-[#AA00E1]"
                           break
                         default:
                           break
                       }
                    %>
                    <h3 class="flex text-xl font-semibold <%= color %>"><%= challenge.difficulty %></h3>
                </div>
                <div class="flex justify-between gap-2">
                    <p class="text-gray-700 text-white"><%= challenge.solveCount %> solves</p>
                    <p class="text-gray-700 text-white"><%= challenge.score %> points</p>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>
    <!-- Overlay -->
    <div id="overlay" class="overflow-y-auto hidden flex fixed w-full h-full top-0 bottom-0 left-0 right-0 bg-slate-800/50 opacity-100 z-50 items-center justify-center p-6">
      <div id="challenge_div" class="flex flex-col min-h-96 h-max w-1/2 px-3 bg-[#007EA7] rounded-md shadow-2xl text-slate-800">
        <!-- Title -->
        <div class="flex flex-col h-fit w-full p-3 border-b border-[#003459] gap-3">
          <div class="flex flex-row w-full justify-between">
            <h1 class="flex text-slate-800 text-4xl font-bold">
              Title Goes Here
            </h1>
            <h1 id="challenge_div_close" class="flex text-slate-800 text-4xl font-bold hover:text-black transition ease-in duration-150 cursor-pointer">
              X
            </h1>
          </div>
          
          <!-- Tags -->
        <div class="flex h-fit w-full gap-3">
          <div class="flex text-slate-800 text-lg font-semibold bg-[#37E100] p-1 justify-center items-center rounded-md cursor-pointer">
            Easy
          </div>
          <div class="flex text-slate-800 text-lg font-semibold bg-indigo-800 p-1 justify-center items-center rounded-md cursor-pointer">
            SOCMINT
          </div>
        </div>
        </div>
        
        <!-- Description -->
        <div class="flex flex-col h-fit w-full gap-2 mt-2">
          <p class="flex text-lg">
            Author: Author Name
          </p>
          <p class="flex text-2xl font-bold">
            Description: 
          </p>
          <p class="flex text-xl break-words ">
            blaghblaghblaghblaghblaghblaghblaghblaghblaghblag hblaghblaghblaghblaghblaghblaghhblaghblaghblaghblaghblaghblaghhblaghblaghblaghblaghblaghblagh
          </p>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer') %>
    <script src="practice.js"></script>
  </body>
</html>